<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="phonecall.rednak71.com.thundersfarm.ContactActivity"
    android:background="@mipmap/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/sara_etter_text"
        android:id="@+id/saratextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_sara_button"
        android:id="@+id/saraCallButton"
        android:layout_below="@+id/saratextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/call_ib" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_sara_button"
        android:id="@+id/saraSmsButton"
        android:background="@drawable/text_ib"
        android:layout_above="@+id/judithtextView"
        android:layout_alignLeft="@+id/judithSMSButton"
        android:layout_alignStart="@+id/judithSMSButton" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_sara_button"
        android:id="@+id/saraEmailButton"
        android:background="@drawable/email_ib"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/saraSmsButton"
        android:layout_toRightOf="@+id/saraSmsButton"
        android:layout_toEndOf="@+id/saraSmsButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/judith_text_view"
        android:id="@+id/judithtextView"
        android:layout_below="@+id/saraCallButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_judith_button"
        android:id="@+id/judithCallButtonId"
        android:layout_below="@+id/judithtextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/call_ib" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_judith"
        android:id="@+id/judithSMSButton"
        android:background="@drawable/text_ib"
        android:layout_below="@+id/judithtextView"
        android:layout_alignLeft="@+id/nealSmsButton"
        android:layout_alignStart="@+id/nealSmsButton" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_judith"
        android:id="@+id/judithEamilButton"
        android:background="@drawable/email_ib"
        android:layout_alignTop="@+id/judithSMSButton"
        android:layout_alignLeft="@+id/saraEmailButton"
        android:layout_alignStart="@+id/saraEmailButton" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/neal_text_view"
        android:id="@+id/nealTextView"
        android:layout_below="@+id/judithCallButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_neal"
        android:id="@+id/nealCallButton"
        android:layout_below="@+id/nealTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/call_ib" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neal_text"
        android:id="@+id/nealSmsButton"
        android:background="@drawable/text_ib"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nealCallButton"
        android:layout_toEndOf="@+id/nealCallButton"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neal_email"
        android:id="@+id/nealEmailButton"
        android:background="@drawable/email_ib"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/judithEamilButton"
        android:layout_alignStart="@+id/judithEamilButton" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/homeButton"
        android:background="@mipmap/thunders400pxl_logo"
        android:layout_alignBottom="@+id/judithEamilButton"
        android:layout_toRightOf="@+id/judithEamilButton"
        android:layout_toEndOf="@+id/judithEamilButton"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_text_view"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/homeButton"
        android:layout_toRightOf="@+id/homeButton"
        android:layout_toEndOf="@+id/homeButton" />

    </RelativeLayout>


</ScrollView>
