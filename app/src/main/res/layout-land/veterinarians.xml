<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/background">
    android:id="@+id/vet_title"
    android:clickable="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/vets_title"
        android:text="@string/vet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/radechel_name_text"
        android:id="@+id/radechelTextid"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/vets_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_redechel"
        android:id="@+id/callRedechelbutton"
        android:layout_alignBottom="@+id/radechelTextid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/kipper_name_text"
        android:id="@+id/kipperTextID"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/radechelTextid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_kipper"
        android:id="@+id/callKipperButton"
        android:layout_alignBottom="@+id/kipperTextID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/appel_name_text"
        android:id="@+id/appelTextId"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/kipperTextID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_appel"
        android:id="@+id/callAppelButton"
        android:layout_alignBottom="@+id/appelTextId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/dr_howard_name"
        android:id="@+id/joanHowardTextId"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/appelTextId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_howard"
        android:id="@+id/callHowardButton"
        android:layout_alignBottom="@+id/joanHowardTextId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/sponseller_text_view"
        android:id="@+id/sponsellerTextId"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/joanHowardTextId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_sponseller"
        android:id="@+id/callSponsellerButton"
        android:layout_alignBottom="@+id/sponsellerTextId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/dr_harder_name"
        android:id="@+id/shirleyHarderTextView"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/sponsellerTextId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_harder"
        android:id="@+id/callHarderButton"
        android:layout_alignBottom="@+id/shirleyHarderTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/woodford_text_View"
        android:id="@+id/woodfordTestId"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/shirleyHarderTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_woodford_button"
        android:id="@+id/callWoodfordButtonID"
        android:layout_alignBottom="@+id/woodfordTestId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/cline_text_view"
        android:id="@+id/clineTextView"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/woodfordTestId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_cline_button"
        android:id="@+id/callClineButtonID"
        android:layout_alignBottom="@+id/clineTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/king_text_view"
        android:id="@+id/kingTextId"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/clineTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/call_king_button"
        android:id="@+id/callKingButtonID"
        android:layout_alignBottom="@+id/kingTextId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/homeButton"
        android:background="@mipmap/thunders400pxl_logo"
        android:layout_alignTop="@+id/callClineButtonID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_text_view"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>


</ScrollView>
